{
  "scripts": {
    "build": "npm run build:css",
    "build:css": "lessc less/scriptable-items.less styles/scriptable-items.css",
    "lint": "eslint --ext .mjs --ignore-path .gitignore ./",
    "lint:fix": "eslint --ext .mjs --ignore-path .gitignore ./ --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "watch": "less-watch-compiler less styles scriptable-items.less"
  },
  "devDependencies": {
    "less": "^4.2.0",
    "less-watch-compiler": "^1.16.3",
    "prettier": "^3.2.5"
  }
}
