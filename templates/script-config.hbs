        <img
            src="{{data.img}}"
            data-edit="img"
            title="{{data.name}}"
            height="64"
            width="64"
        />
        <h1><input
                name="name"
                type="text"
                value="{{data.name}}"
                placeholder="{{localize 'Name'}}"
            /></h1>
