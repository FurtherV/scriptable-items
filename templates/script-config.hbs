<form class="{{cssClass}} flexcol script-config" autocomplete="off">
    <header class="sheet-header">
        <img
            src="{{data.img}}"
            data-edit="img"
            title="{{data.name}}"
            height="64"
            width="64"
        />
        <h1><input
                name="name"
                type="text"
                value="{{data.name}}"
                placeholder="{{localize 'Name'}}"
            /></h1>
    </header>

    <div class="form-group">
        <label>Triggers</label>
        <multi-select name="triggers">
            {{#each triggers}}
                <option value={{@key}} {{selected}}>{{label}}</option>
            {{/each}}
        </multi-select>
    </div>

    <details>
        <summary>Button Configuration</summary>
        <fieldset>
            <div class="form-group">
                <label>Icon</label>
                <input
                    name="buttonIconClasses"
                    type="text"
                    value="{{data.buttonIconClasses}}"
                    placeholder="fa-solid fa-code"
                />
                <p class="hint">CSS classes used for the icon of the button. If
                    empty, no icon will be shown.</p>
            </div>
            <div class="form-group">
                <label>Text</label>
                <input
                    name="buttonText"
                    type="text"
                    value="{{data.buttonText}}"
                    placeholder="{{data.name}}"
                />
                <p class="hint">Text displayed on the button. Is always right of
                    the icon and defaults to the scripts name if left empty.</p>
            </div>
        </fieldset>
    </details>

    <div class="form-group stacked command">
        <label>{{localize "Command"}}</label>
        <textarea name="command">{{data.command}}</textarea>
    </div>

    <footer class="sheet-footer flexrow">
        <button type="submit">
            <i class="fas fa-save"></i>
            {{localize "SCRIPTABLE-ITEMS.Script.Save"}}</button>
        <button class="execute" type="button">
            <i class="fas fa-dice-d20"></i>
            {{localize "SCRIPTABLE-ITEMS.Script.SaveAndExecute"}}</button>
    </footer>
</form>