    <div class="form-group">
        <label>Triggers</label>
        <multi-select name="triggers">
            {{#each triggers}}
                <option value={{@key}} {{selected}}>{{label}}</option>
            {{/each}}
        </multi-select>
    </div>

    <div class="form-group stacked command">
        <label>{{localize "Command"}}</label>
        <textarea name="command">{{data.command}}</textarea>
    </div>

    <footer class="sheet-footer flexrow">
        <button type="submit">
            <i class="fas fa-save"></i>
            {{localize "SCRIPTABLE-ITEMS.Script.Save"}}</button>
        <button class="execute" type="button">
            <i class="fas fa-dice-d20"></i>
            {{localize "SCRIPTABLE-ITEMS.Script.SaveAndExecute"}}</button>
    </footer>
